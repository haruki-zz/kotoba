{
  "name": "@kotoba/renderer",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "dependencies": {
    "@kotoba/shared": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "scripts": {
    "dev": "pnpm run typecheck",
    "build": "pnpm run typecheck",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "vitest --version"
  }
}
