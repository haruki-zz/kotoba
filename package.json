{
  "name": "kotoba",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@9.12.1",
  "engines": {
    "node": ">=18.18.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "pnpm -r --if-present dev",
    "build": "pnpm -r --if-present build",
    "lint": "eslint \"packages/*/src/**/*.{ts,tsx,js,jsx}\" \"scripts/**/*.{ts,tsx,js,jsx}\" --max-warnings=0 --no-error-on-unmatched-pattern",
    "format": "prettier --write \"{packages,scripts,docs,memory-bank}/**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\" \"*.{json,md,yaml,yml}\"",
    "format:check": "prettier --check \"{packages,scripts,docs,memory-bank}/**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\" \"*.{json,md,yaml,yml}\"",
    "test": "vitest run --passWithNoTests",
    "typecheck": "tsc -b",
    "postinstall": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint && pnpm format:check && pnpm test"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.4.1",
    "simple-git-hooks": "^2.11.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.53.1",
    "vitest": "^2.1.3"
  }
}
