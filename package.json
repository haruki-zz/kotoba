{
  "name": "kotoba",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vite dev --config vite.config.ts",
    "dev:api": "tsx src/main/index.ts",
    "build": "pnpm run typecheck && vite build --config vite.config.ts",
    "preview": "vite preview --config vite.config.ts",
    "typecheck": "pnpm run typecheck:main && pnpm run typecheck:renderer",
    "typecheck:main": "tsc --noEmit -p tsconfig.main.json",
    "typecheck:renderer": "tsc --noEmit -p tsconfig.renderer.json",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write \"{src,scripts,memory-bank,plan,prompts}/**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "vitest run --passWithNoTests",
    "db:migrate": "tsx scripts/run-migrations.ts",
    "db:backup": "tsx scripts/backup-db.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.2",
    "@google/generative-ai": "^0.11.1",
    "@tanstack/react-query": "^5.62.3",
    "better-sqlite3": "^12.6.2",
    "fastify": "^5.7.4",
    "fastify-type-provider-zod": "^4.0.2",
    "openai": "^4.77.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.28.0",
    "zustand": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.1.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^23.2.0",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "vite": "^5.1.4",
    "vitest": "^1.3.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "unrs-resolver",
      "better-sqlite3"
    ]
  }
}
