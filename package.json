{
  "name": "kotoba",
  "version": "1.0.0",
  "private": true,
  "description": "Cross-platform desktop app for Japanese vocabulary practice.",
  "main": "dist-electron/main/index.mjs",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && electron-builder --dir",
    "build:desktop": "vite build && electron-builder",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint \"src/**/*.{ts,tsx}\" \"vite.config.ts\"",
    "lint:prettier": "prettier --check \"src/**/*.{ts,tsx,jsx}\" \"package.json\" \"tsconfig.json\" \"vite.config.ts\" \"eslint.config.js\"",
    "format": "prettier --write \"src/**/*.{ts,tsx,jsx}\" \"package.json\" \"tsconfig.json\" \"vite.config.ts\" \"eslint.config.js\"",
    "test": "vitest run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haruki-zz/kotoba.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "bugs": {
    "url": "https://github.com/haruki-zz/kotoba/issues"
  },
  "homepage": "https://github.com/haruki-zz/kotoba#readme",
  "build": {
    "appId": "com.haruki.kotoba",
    "productName": "Kotoba",
    "files": [
      "dist/**",
      "dist-electron/**",
      "node_modules/**",
      "package.json"
    ],
    "directories": {
      "output": "release"
    }
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "openai": "^6.16.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@types/node": "^25.0.5",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^15.14.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vite": "^7.3.1",
    "vite-plugin-electron": "^0.29.0",
    "vitest": "^4.0.16"
  }
}
