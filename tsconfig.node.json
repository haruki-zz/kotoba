{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@renderer/*": ["src/renderer/*"],
      "@styles/*": ["src/renderer/styles/*"],
      "@main/*": ["src/main/*"],
      "@preload/*": ["src/preload/*"],
      "@assets/*": ["assets/*"],
      "@tests/*": ["src/__test__/*"]
    }
  },
  "include": ["vite.config.ts"]
}
